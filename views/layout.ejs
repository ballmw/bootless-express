<html>
<head>
    <meta charset="utf-8">
    <title>Bootless, for Bootstrap</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <% if (id) { %>
    <link rel='stylesheet' href='/css/<%=id%>'>
    <% } else { %>
    <link rel='stylesheet' href='/css/bootstrap.css'>
    <% } %>
    <link rel='stylesheet' href='/css/jquery.miniColors.css'>
    <style>
        input{
            height:24px;
        }
    </style>

    <%- js('jquery-1.7.1.min') %>
    <%- js('underscore') %>
    <%- js('json2') %>
    <%- js('backbone') %>
    <%- js('jquery.miniColors') %>
    <%- js('require.js') %>
    

<script type="text/javascript">

    window.App = new Object(); 

$(function () {
  require(['js/bootless'], function(bootless)
  {
    new App.BootlessView('#app');
    $('input.color').miniColors();
  });
  
  $('input[type=range]').change(function(event)
    {
      var siblings = $(event.currentTarget).siblings();
      var val = $(event.currentTarget).val();
      siblings.html(val);
    }
  );
});
</script>
</head>
<body>
<div class="navbar navbar-fixed-top">
